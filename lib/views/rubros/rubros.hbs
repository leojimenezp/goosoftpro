            {{>navigation}}
            <!-- Site Content Wrapper -->
            <div class="dt-content-wrapper">
                <!-- Site Content -->
                <div class="dt-content">
                    <!-- Page Header -->
                   <div class="dt-page__header">
                    <div class="row">
                        <div class="col-md-6"><h1 class="dt-page__title"><i class="icon icon-addnew dt-icon-bg bg-orange text-orange"></i> Rubro</h1></div>
                        <div class="col-md-6"><button type="button" class="btn btn-primary btn-sm mr-2 mb-2" data-toggle="modal" data-target="#large-modal" style="float: right;">Añadir Rubro</button></div>
                    </div>
                   </div>
                   <br>
                    <!-- /page header -->
                  <table id="data-table" class="table table-striped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th class="text-center">Sigla</th>
                                                <th class="text-center">Descripci&oacute;n</th>
                                                <th class="text-center">Estado</th>
                                                <th class="text-center">Editar/eliminar</th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            {{#each rubros}}
                                            <tr class="gradeX" {{#Guacamaya estado_rubro '==' 2}} style="color: #82490b;background-color: #fee8d0;border-color: #fedfbe;" {{/Guacamaya}}>
                                                <td class="text-center">{{sigla_rubro}}</td>
                                                <td class="text-center">{{nombre_rubro}}</td>
                                                <td class="text-center">
                                                    {{#Guacamaya estado_rubro '==' 1}} ACTIVO {{/Guacamaya}}
                                                    {{#Guacamaya estado_rubro '==' 2}} INACTIVO {{/Guacamaya}}
                                                </td>
                                                <td class="text-center"><a href="/editar-rubro/{{id_rubro}}" class="btn btn-success text-white dt-fab-btn">
                                                <i class="icon icon-editors icon-1x"></i>
                                                </a>
                                                <a href="/eliminar-rubro/{{id_rubro}}"
                                                    class="btn-eliminar-planeacion btn btn-success text-white dt-fab-btn">
                                                        <img src="/icons-planeacion/trash.svg" alt="">
                                                </a>
                                                </td>
                                            </tr>
                                            {{/each}}
                                           
                                            </tbody>
                                          
                                        </table>
                </div>
                {{>footer}}
            </div>
            <!-- /site content wrapper -->
        </main>
    </div>
</div>
<!-- /root -->

<!-- Modal -->
                                    <div class="modal fade" id="large-modal" tabindex="-1" role="dialog"
                                         aria-labelledby="model-4"
                                         aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">

                                            <!-- Modal Content -->
                                            <div class="modal-content">
                                              
                                              <form method="POST" action="/rubros">
                                              <input type="hidden" name="id_personal" value="{{ user.id }}">
                                                <!-- Modal Header -->
                                                <div class="modal-header bg-primary">
                                                    <h3 class="modal-title" id="model-4" style="color:white;">Nuevo rubro</h3>
                                                </div>
                                                <!-- /modal header -->

                                                <!-- Modal Body -->
                                                <div class="modal-body">
                                                    <div class="row">
                                                        
                                                        <div class="col-md-6">
                                                         <div class="form-group">
                                                         <label>Sigla</label>
                                                         <input type="text" class="form-control" placeholder="Sigla" name="sigla_rubro" required="" onkeyup="javascript:this.value=this.value.toUpperCase();">
                                                         </div>
                                                         </div> 

                                                        <div class="col-md-6">
                                                         <div class="form-group">
                                                         <label>Descripci&oacute;n</label>
                                                         <input type="text" class="form-control" placeholder="Descripci&oacute;n" name="nombre_rubro" required="" onkeyup="javascript:this.value=this.value.toUpperCase();">
                                                         </div>
                                                         </div> 

                                                         <div class="col-md-6">
                                                         <div class="form-group">
                                                         <label>Estado</label>
                                                         <select class="form-control" required="" name="estado_rubro">
                                                         <option value="1">ACTIVO</option>
                                                         <option value="2">INACTIVO</option>
                                                         </select>
                                                         </div>
                                                         </div>
                                                         

                                                    </div>
                                                </div>
                                                <!-- /modal body -->

                                                <!-- Modal Footer -->
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-info btn-sm"
                                                            data-dismiss="modal">Cancelar
                                                    </button>
                                                    <button type="submit" class="btn btn-primary btn-sm">Añadir
                                                    </button>
                                                </div>
                                                <!-- /modal footer -->
                                              </form>
                                            </div>
                                            <!-- /modal content -->

                                        </div>
                                    </div>
                                    <!-- /modal -->
