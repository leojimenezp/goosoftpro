           {{>navigation}}

            <!-- Site Content Wrapper -->
            <div class="dt-content-wrapper">
                <!-- Site Content -->
                <div class="dt-content">
                    <!-- Page Header -->
                    <div class="dt-page__header">
                        <div class="row">
                        <div class="col-md-6"><h1 class="dt-page__title"><i class="icon icon-customizer dt-icon-bg bg-orange text-orange"></i> Tipo de equipo o herramienta</h1></div>
                        <div class="col-md-6"><button type="button" class="btn btn-primary btn-sm mr-2 mb-2" data-toggle="modal" data-target="#large-modal" style="float: right;">Añadir equipo o herramienta</button></div>
                         </div>
                    </div>
                    <!-- /page header -->
                  <br>
                  <div class="row">

                      {{#each tipo_equipos_herramietas}}

                        <!-- Grid Item -->
                        <div class="col-xl-3 col-sm-6 col-12">

                            <!-- Card -->
                            <div class="dt-card">

                                <!-- Card Body -->
                                <a href="/editar-tipo-equipos-herramientas/{{id_tipo_equipo_herramienta}}">
                                <div class="dt-card__body px-5 py-4">
                                    <h6 class="text-body text-uppercase mb-2"><b>{{nombre_equipo_herramienta}}</b> </h6>
                                    <div class="d-flex align-items-baseline mb-4">

                                      <img src="/pics-tipo-equipos-herramientas/{{imagen_equipo_herramienta}}" width="130px;" height="110px;" style="display:block;margin:auto;">
                                        
                                    </div>

                                    <div class="dt-indicator-item__info mb-2" data-fill="150" data-max="150">

                                         {{#Guacamaya estado_equipo_herramienta '==' 1}} <span class="badge badge-success mb-1 mr-1">ACTIVO</span> {{/Guacamaya}}
                                         {{#Guacamaya estado_equipo_herramienta '==' 2}} <span class="badge badge-danger mb-1 mr-1">INACTIVO</span> {{/Guacamaya}}
                                        
                                    </div>
                                </div>
                                </a>
                                <!-- /bard body -->

                            </div>
                            <!-- /card -->

                        </div>
                        <!-- /grid item -->

                      {{/each}}

                    </div>
          
                <!-- /footer -->
            </div>
            {{>footer}}
           
            <!-- /site content wrapper -->
        </main>
    </div>
</div>
<!-- /root -->

<!-- Modal -->
                                    <div class="modal fade" id="large-modal" tabindex="-1" role="dialog"
                                         aria-labelledby="model-4"
                                         aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">

                                            <!-- Modal Content -->
                                            <div class="modal-content">
                                              
                                              <form method="POST" action="/tipo-equipos-herramientas" enctype="multipart/form-data">
                                               <input type="hidden" name="id_personal" value="{{ user.id }}">
                                                <!-- Modal Header -->
                                                <div class="modal-header bg-primary">
                                                    <h3 class="modal-title" id="model-4" style="color:white;">Nueva equipo o herramienta</h3>
                                                </div>
                                                <!-- /modal header -->

                                                <!-- Modal Body -->
                                                <div class="modal-body">
                                                    <div class="row">

                                                        <div class="col-md-6">
                                                         <div class="form-group">
                                                         <label>Nombre del equipo o herramienta</label>
                                                         <input type="text" class="form-control" placeholder="Nombre del equipo o herramienta" name="nombre_equipo_herramienta" required="" onkeyup="javascript:this.value=this.value.toUpperCase();">
                                                         </div>

                                                         <div class="form-group">
                                                         <label>Estado</label>
                                                         <select class="form-control" required="" name="estado_equipo_herramienta">
                                                         <option value="1">ACTIVO</option>
                                                         <option value="2">INACTIVO</option>
                                                         </select>
                                                         </div>

                                                         </div> 

                                                         <div class="col-md-6">
                                                         <div class="form-group">
                                                         <label>Imagen</label>
                                                         <input type="file" class="form-control" name="imagen_equipo_herramienta" required="" accept="image/png, .jpeg, .jpg, image/gif">
                                                         </div>
                                                         </div>

                                                    </div>
                                                </div>
                                                <!-- /modal body -->

                                                <!-- Modal Footer -->
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-info btn-sm"
                                                            data-dismiss="modal">Cancelar
                                                    </button>
                                                    <button type="submit" class="btn btn-primary btn-sm">Añadir
                                                    </button>
                                                </div>
                                                <!-- /modal footer -->
                                              </form>
                                            </div>
                                            <!-- /modal content -->

                                        </div>
                                    </div>
                                    <!-- /modal -->