            {{>navigation}}
            <!-- Site Content Wrapper -->
            <div class="dt-content-wrapper">
                <!-- Site Content -->
                <div class="dt-content">
                    <!-- Page Header -->
                   <div class="dt-page__header">
                    <div class="row">
                        <div class="col-md-6"><h1 class="dt-page__title"><i class="icon icon-crm dt-icon-bg bg-orange text-orange"></i> Campos</h1></div>
                        <div class="col-md-6"><a href="/campos/crear" class="btn btn-primary btn-sm mr-2 mb-2" style="float: right;">Añadir Campo</a></div>
                    </div>
                   </div>
                   <br>
                    <!-- /page header -->
                  <table id="data-table" class="table table-striped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th class="text-center">Nombre</th>
                                                <th class="text-center">Propietario</th>
                                                <th class="text-center">Departamento</th>
                                                <th class="text-center">Municipio</th>
                                                <th class="text-center">Ubicación</th>
                                                <th class="text-center">Mapa</th>
                                                <th class="text-center">Estado</th>
                                                <th class="text-center">Editar</th>

                                            </tr>
                                            </thead>
                                            <tbody>

                                            {{#each campos}}
                                            <tr class="gradeX" {{#Guacamaya estado_campo '==' 2}} style="color: #82490b;background-color: #fee8d0;border-color: #fedfbe;" {{/Guacamaya}}>
                                                <td class="text-center">{{nombre_campo}}</td>
                                                <td class="text-center">{{razon_social_cliente}}</td>
                                                <td class="text-center">{{departamento_campo}}</td>
                                                <td class="text-center">{{municipio_campo}}</td>
                                                <td class="text-center">{{ubicacion_campo}}</td>
                                                <td class="text-center">
                                                    <a href="/map-campo/{{id_campo}}" target="_blank"><img src="/images/maps.png" width="25px;"></a>
                                                </td>
                                                <td class="text-center">
                                                    {{#Guacamaya estado_campo '==' 1}} ACTIVO {{/Guacamaya}}
                                                    {{#Guacamaya estado_campo '==' 2}} INACTIVO {{/Guacamaya}}
                                                </td>
                                                <td class="text-center"><a href="/editar-campo/{{id_campo}}"  class="btn btn-success text-white dt-fab-btn">
                                                <i class="icon icon-editors icon-1x"></i>
                                                </a>
                                                <a href="/eliminar-campo/{{id_campo}}"
                                                    class="btn-eliminar-planeacion btn btn-success text-white dt-fab-btn">
                                                        <img src="/icons-planeacion/trash.svg" alt="">
                                                </a>
                                            </tr>
                                            {{/each}}
                                           
                                            </tbody>
                                          
                                        </table>
                </div>
                {{>footer}}
            </div>
