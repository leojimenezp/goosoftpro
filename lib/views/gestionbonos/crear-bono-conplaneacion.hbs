<script src="/resources/node_modules/chart.js/dist/Chart.min.js"></script>

{{>navigation}}
<div class="dt-content-wrapper">
    <div class="dt-content datos-planeacion">
        <div class="dt-page-header">


            <form action="/gestionbonos/agregar-bono-sin-planeacion1" method="POST">
            <div class=" row">
                    <div class="col"> 
                    <div class="form-group col-md-12">
                        <label>Nombre del  benefisario </label>
                        <label for="exampleFormControlSelect1">PERSONAL</label>
                            <select class="form-control" name="id_personal" id="exampleFormControlSelect1">
                       
                            {{#each consulta}}
                                <option value="{{id}}">{{nombre_personal}} {{nombre_personal}}</option>   
                            {{/each}}  
                         </select>
                    </div>
                </div>
                <div class="col">
                    <label>c.c</label>
                    <div class="form-group col-md-12">
                        <input type="text" name=""  value="{{#each consulta}}{{numero_documento_personal}}{{/each}}   "class="form-control" disabled>
                    </div> 
                </div>
            </div>
            <div class=" row">
                    <div class="col"> 
                   <label>centro de costo </label>
                    <div class="form-group col-md-12">
                        <input type="text" name="centro_costo" class="form-control">
                        <input type="hidden" name="id_planeacion" value="{{id_planeacion}}" class="form-control">
                    </div> 
                </div>
            
                <div class="col">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">tipo de bono</label>
                            <select class="form-control" name="tipo_de_bono" id="exampleFormControlSelect1">
                                <option value="1">TRANSPORTE</option>
                                <option value="2">CAMPO</option>
                                <option value="3">OTROS</option>
                            </select>
                            <input type="text  " name="otross" class="form-control"  placeholder="OTROS" value=""  >
                        </div>
                    </div>
            </div>
            <div class=" row">
                <div class="col">
                    <div class="form-group col-md-12">
                        <label>fecha inicio</label>
                        <input type="date" name="fecha_inicio" class="form-control">
                    </div>
                </div>
                <div class="col">
                    <label>fecha de fin</label>
                    <div class="form-group col-md-12">
                        <input type="date" name="fecha_final" id="montoSolicitado" class="form-control" >
                    </div> 
                </div>
            </div>
            <button type="submit" class="btn btn-primary" > enviar </button>
            </form>
            <br>
             <a href="/gestionbonos" class="btn btn-primary">atras</a>  
        </div>
    </div>
</div>