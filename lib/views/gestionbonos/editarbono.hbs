<script src="/resources/node_modules/chart.js/dist/Chart.min.js"></script>

{{>navigation}}
<div class="dt-content-wrapper">
    <div class="dt-content datos-planeacion">
        <div class="dt-page-header">
           <form action="/gestionbonos/editarbono1" method="POST">
            <div class=" row">
                <input type="hidden" name="id_bonos"  value="{{id_bonos}}" class="form-control" >
                    {{#each consulta}}
                    <div class="col">
                    <label>nombre de la persona</label>
                    <div class="form-group col-md-12">
                        <input type="text" name=""  value="{{nombre_personal}}{{apellido_personal}}   "class="form-control" disabled>
                         <input type="hidden" name="id_personal"  value="{{id}}" class="form-control" >
                    </div> 
                </div>
                <div class="col">
                    <label>c.c</label>
                    <div class="form-group col-md-12">
                        <input type="text" name=""  value="{{numero_documento_personal}}   "class="form-control" disabled>
                    </div> 
                </div>
            </div>
            <div class=" row">
                    <div class="col"> 
                   <label>centro de costo </label>
                    <div class="form-group col-md-12">
                        <input type="text" name="centro_costo" class="form-control" value="{{centro_de_costo}}">
                        <input type="hidden" name="id_planeacion" value="{{id_planeacion}}" class="form-control">
                    </div> 
                </div>
            
                <div class="col">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">tipo de bono</label>
                            <select class="form-control" name="tipo_de_bono" id="exampleFormControlSelect1">
                                <option value="1">TRANSPORTE</option>
                                <option value="2">CAMPO</option>
                                <option value="3">OTROS</option>
                            </select>
                            <input type="text  " name="otross" class="form-control"  placeholder="OTROS" value="{{otros}}"  >
                        </div>
                    </div>
            </div>
            <div class=" row">
                <div class="col">
                    <div class="form-group col-md-12">
                        <label>fecha inicio</label>
                        <input type="date" name="fecha_inicio" class="form-control" value="{{fecha_inicio}}">
                    </div>
                </div>
                <div class="col">
                    <label>fecha de fin</label>
                    <div class="form-group col-md-12">
                        <input type="date" name="fecha_final" id="montoSolicitado" value="{{fecha_final}}"class="form-control" >
                    </div> 
                </div>
            </div>
            <button type="submit" class="btn btn-primary" > EDITAR </button>
            {{/each}}
            </form>
            <br>
             <a href="/gestionbonos" class="btn btn-primary">atras</a>  
        </div>
    </div>
</div>