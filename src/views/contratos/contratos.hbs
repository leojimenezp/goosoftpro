            {{>navigation}}
            <!-- Site Content Wrapper -->
            <div class="dt-content-wrapper">
                <!-- Site Content -->
                <div class="dt-content">
                    <!-- Page Header -->
                   <div class="dt-page__header">
                    <div class="row">
                        <div class="col-md-6"><h1 class="dt-page__title"><i class="icon icon-forms-basic dt-icon-bg bg-orange text-orange"></i> Contratos</h1></div>
                        <div class="col-md-6"><a href="/contratos/crear" class="btn btn-primary btn-sm mr-2 mb-2" style="float: right;">Añadir Contrato</a></div>
                    </div>
                   </div>
                   <br>
                    <!-- /page header -->
                  <table id="data-table" class="table table-striped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th class="text-center">ID</th>
                                                <th class="text-center">Descripción</th>
                                                <th class="text-center">Fecha inicio</th>
                                                <th class="text-center">Fecha fin</th>
                                                <th class="text-center">Tipo de contrato</th>
                                                <th class="text-center">Bolsa</th>
                                                <th class="text-center">Moneda</th>
                                                <th class="text-center">Estado</th>
                                                <th class="text-center">Editar/eliminar</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                             
                                              {{#each contratos}}
                                              <tr class="gradeX" {{#Guacamaya estado_contrato '==' 2}} style="color: #82490b;background-color: #fee8d0;border-color: #fedfbe;" {{/Guacamaya}}>
                                              <td class="text-center">{{numero_contrato}}</td>
                                              <td class="text-center">{{descripcion_contrato}}</td>
                                              <td class="text-center">{{fecha_inicio_contrato}}</td>
                                              <td class="text-center">{{fecha_fin_contrato}}</td>
                                              <td class="text-center">{{nombre_tipo_contrato}}</td>
                                              <td class="text-center">{{bolsa_contrato}}</td>
                                              <td class="text-center">{{abreviatura_moneda}}</td>
                                              <td class="text-center">
                                                   {{#Guacamaya estado_contrato '==' 1}} ACTIVO {{/Guacamaya}}
                                                   {{#Guacamaya estado_contrato '==' 2}} INACTIVO {{/Guacamaya}}
                                              </td>
                                               <td class="text-center">
                                                   <a href="/editar-contrato/{{id_contrato}}"  class="btn btn-success text-white dt-fab-btn">
                                                   <i class="icon icon-editors icon-1x"></i>
                                                </a>
                                                <a href="/eliminar-contrato/{{id_contrato}}/{{descripcion_contrato}}"
                                                    class="btn-eliminar-planeacion btn btn-success text-white dt-fab-btn">
                                                 <img src="/icons-planeacion/trash.svg" alt="">
                                                </td>
                                                </tr>

                                              {{/each}}
                                           
                                            </tbody>
                                          
                                        </table>
                </div>
                {{>footer}}
            </div>
            <!-- /site content wrapper -->
        </main>
    </div>
</div>
