            {{>navigation}}
            <!-- Site Content Wrapper -->
            <div class="dt-content-wrapper">
                <!-- Site Content -->
                <div class="dt-content">
                    <!-- Page Header -->
                   <div class="dt-page__header">
                    <div class="row">
                        <div class="col-md-6"><h1 class="dt-page__title"><i class="icon icon-chatbull dt-icon-bg bg-orange text-orange"></i> Crear Pozo</h1></div>
                    </div>
                   </div>
                   
                    <!-- /page header -->

                    <div class="dt-card__body">

                                    <!-- Form -->
                                    <form action="/editar-pozo/{{pozo.id_pozo}}" method="POST">
                                        <div class="form-row">
                                           
                                            <div class="col-sm-3 mb-3">
                                              <label>Nombre</label>
                                              <input type="text" class="form-control" placeholder="Nombre" name="nombre_pozo" required value="{{pozo.nombre_pozo}}" onkeyup="javascript:this.value=this.value.toUpperCase();">
                                            </div>
                                            
                                            <div class="col-sm-3 mb-3">
                                            <label>Campo</label>
                                             <select class="form-control" name="id_campo" required>
                                                  {{#each campos}}
                                                  <option value="{{ id_campo }}" {{#Guacamaya pozo.id_campo '==' id_campo}} selected {{/Guacamaya}}>{{ nombre_campo }}</option>
                                                  {{/each}}
                                              </select>
                                            </div>

                                            <div class="col-sm-3 mb-3">
                                            <label>Tipo de pozo</label>
                                             <select class="form-control" name="id_tipo_pozo" required>
                                                  {{#each tipo_pozos}}
                                                  <option value="{{ id_tipo_pozo }}" {{#Guacamaya pozo.id_tipo_pozo '==' id_tipo_pozo}} selected {{/Guacamaya}}>{{ nombre_tipo_pozo }}</option>
                                                  {{/each}}
                                              </select>
                                            </div>

                                            <div class="col-sm-3 mb-3">
                                            <label>Estado</label>
                                              <select class="form-control" required="" name="estado_pozo">
                                                  <option value="1" {{#Guacamaya pozo.estado_pozo '==' 1}} selected {{/Guacamaya}}>ACTIVO</option>
                                                  <option value="2" {{#Guacamaya pozo.estado_pozo '==' 2}} selected {{/Guacamaya}}>INACTIVO</option>
                                                </select>
                                            </div>

                                         
                                            <div class="col-sm-12 mb-3">
                                                <button type="submit" class="btn btn-primary btn-sm" style="float: right">
                                                    Actualizar
                                                </button>
                                                <a href="/pozos"  class="btn btn-info btn-sm mr-2 mb-2" style="float: right;">Cancelar</a>
                                            </div>

                                        </div>
                                       
                                        
                                    </form>
                                    <!-- /form -->

                                </div>
             
                </div>
                {{>footer}}
            </div>
            <!-- /site content wrapper -->
        </main>
    </div>
</div>
<!-- /root -->

