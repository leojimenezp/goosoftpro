            {{>navigation}}
            <!-- Site Content Wrapper -->
            <div class="dt-content-wrapper">
                <!-- Site Content -->
                <div class="dt-content">
                    <!-- Page Header -->
                   <div class="dt-page__header">
                    <div class="row">
                        <div class="col-md-6"><h1 class="dt-page__title"><i class="icon icon-check dt-icon-bg bg-orange text-orange"></i> Items</h1></div>
                        <div class="col-md-6"><a href="/item/crear" class="btn btn-primary btn-sm mr-2 mb-2" style="float: right;">Añadir Item</a></div>
                    </div>
                   </div>
                   <br>
                    <!-- /page header -->
                  <table id="data-table" class="table table-striped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th class="text-center">ID</th>
                                                <th class="text-center">Descripción</th>
                                                <th class="text-center">Cantidad</th>
                                                <th class="text-center">Valor</th>
                                                <th class="text-center">Bodega</th>
                                                <th class="text-center">Marca</th>
                                                <th class="text-center">Categoria</th>
                                                <th class="text-center">Estado</th>
                                                <th class="text-center">Editar</th>

                                            </tr>
                                            </thead>
                                            <tbody>

                                            {{#each items}}
                                            <tr class="gradeX" {{#Guacamaya estado_item '==' 2}} style="color: #82490b;background-color: #fee8d0;border-color: #fedfbe;" {{/Guacamaya}}>
                                                <td class="text-center">{{numero_item}}</td>
                                                <td class="text-center">{{descripcion_item}}</td>
                                                <td class="text-center">{{cantidad_item}}</td>
                                                <td class="text-center">{{valor_item}}</td>
                                                <td class="text-center">{{bodega_item}}</td>
                                                <td class="text-center">{{marca_item}}</td>
                                                <td class="text-center">
                                                    {{#Guacamaya categoria_item '==' 1}} HSEQ {{/Guacamaya}}
                                                    {{#Guacamaya categoria_item '==' 2}} MANTENIMIENTO {{/Guacamaya}}
                                                    {{#Guacamaya categoria_item '==' 3}} TRANSPORTE {{/Guacamaya}}
                                                    {{#Guacamaya categoria_item '==' 4}} OPERACIÓN {{/Guacamaya}}
                                                    {{#Guacamaya categoria_item '==' 5}} PERSONAL {{/Guacamaya}}
                                                    {{#Guacamaya categoria_item '==' 6}} TODOS {{/Guacamaya}}
                                                    {{#Guacamaya categoria_item '==' 7}} CONSIGNACION {{/Guacamaya}}
                                                </td>
                                                <td class="text-center">
                                                    {{#Guacamaya estado_item '==' 1}} ACTIVO {{/Guacamaya}}
                                                    {{#Guacamaya estado_item '==' 2}} INACTIVO {{/Guacamaya}}
                                                </td>
                                                <td class="text-center"><a href="/editar-item/{{id_item}}" class="btn btn-success text-white dt-fab-btn">
                                                <i class="icon icon-editors icon-1x"></i>
                                                </a></td>
                                            </tr>
                                            {{/each}}
                                           
                                            </tbody>
                                          
                                        </table>
                </div>
                {{>footer}}
            </div>
            <!-- /site content wrapper -->
        </main>
    </div>
</div>
<!-- /root -->
