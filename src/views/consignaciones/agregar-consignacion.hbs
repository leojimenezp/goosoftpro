<script src="/resources/node_modules/chart.js/dist/Chart.min.js"></script>

{{>navigation}}

<div class="dt-content-wrapper">
    <div class="dt-content datos-planeacion">
        <div class="dt-page-header">

            <div class="row">
                <div class="col-md-4 col-xs-4"></div>
                <div class="col-md-4 col-xs-4"></div>
                <div class="col-md-4 col-xs-4">
                    <a href="/consignaciones/agregar/rubro" class="btn btn-primary">Agregar Rubro</a>
                </div>
            </div>

            <br>

           <form action="/agregarConsignacion" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Fecha solicitud: </label>
                        <input name="fecha_solicitud" type="date" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Monto solicitado: </label>
                        <input name="monto" type="number" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Nombre del beneficiario: </label>
                        <select name="id_personal" class="form-control">
                            {{#each personal}}
                            <option value="{{ id }}">{{ nombre_personal }} {{ apellido_personal }}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Cedula del beneficiario: </label>
                        <select name="numero_documento_personal" class="form-control">
                            {{#each personal}}
                            <option value="{{ id }}">{{ numero_documento_personal }}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Servicio: </label>
                        <select name="id_planeacion" class="form-control">
                            {{#each servicio}}
                            <option value="{{ id_planeacion }}">{{ titulo }}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Placa de vehiculo: </label>
                        <select name="placa_vehiculo" class="form-control">
                            {{#each placa}}
                            <option value="{{ id_equipo }}">{{ placa_equipo }}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label>Descripcion: </label>
                        <textarea name="descripcion" class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <input type="submit" value="Agregar" class="btn btn-primary" style="width: 100%">
                    </div>
                </div>
           </form>

        </div>
    </div>
</div>