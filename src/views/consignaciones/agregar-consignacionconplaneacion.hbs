<script src="/resources/node_modules/chart.js/dist/Chart.min.js"></script>

{{>navigation}}

<div class="dt-content-wrapper">
    <div class="dt-content datos-planeacion">
        <div class="dt-page-header">
            
               
                <form action="/AgregarDetallesConsignacion" method="POST">
                <div class=" row">
                <div class="col">
                   <div class="form-group col-md-12">
                <label> nombre del  benefisario </label>
                <select id="personaSelect" name="id_personal" class="form-control">
                    {{#each consulta}}
                        <option value="{{id}}">{{nombre_personal}}{{apellido_personal}}</option>   
                    {{/each}}  
                </select>
                </div>
                </div>
                <div class="col">
             <label> C.C</label>
                    <div class="form-group col-md-12">
                        <input type="text" value="{{#each consulta2}}{{numero_documento_personal}}{{/each}}"  id="documentoTxt" class="form-control" disabled>
                    </div>
                    
                    </div>
                    </div>
                    <div class=" row">
                        <div class="col">
                            <div class="form-group col-md-12">
                                <label> fecha </label>
                                <input type="date" name="fecha" class="form-control">
                            </div>
                        </div>
                        <div class="col">
                    
                            <label> dias estimados </label>
                            <div class="form-group col-md-12">
                                <input type="text" name="dias" class="form-control">
                            </div>
                        </div>
                    </div>
                <label>observaciones </label>
            <div class="form-group col-md-12">
                <input type="text" name="observaciones" class="form-control">
                <input type="hidden" name="estado" class="form-control" value="no aprovado">
                <input type="hidden" name="id_planeacion" class="form-control" value="{{id_planeacion}}">
            </div>
            <br>
            <br>
            <table class="table-planeacion table table-striped table-bordered table-hover display" >
               
                  <thead>
                        <tr>
                        <th scope="col" class="text-center">ITEM</th>
                        <th scope="col" class="text-center">NOMBRE</th>
                        <th scope="col" class="text-center">BODEGA</th>
                        <th scope="col" class="text-center" >CANTIDAD</th> 
                        <th scope="col" class="text-center" >MARCA</th> 
                        <th scope="col" class="text-center" >COSTO UNITARIO</th>

                    </tr>
                </thead>
                
                {{#each consulta1}}
                    <tr>   <td class="text-center">{{id_item}}</td>
                        <td class="text-center">{{descripcion_item}}</td>
                            <td class="text-center">{{bodega_item}}</td>
                            <td class="text-center"><input type="text" name="cantidad-{{id_item}}"  placeholder="{{cantidad_item}}" ></td> 
                            <td class="text-center">{{marca_item}}</td>
                            <td class="text-center"><input type="text" name="costoU-{{id_item}}"  value="{{valor_item}}"></td>
                       </tr> 
                {{/each}}   
                       <tr>
                           <td>
                            
                           </td>
                       </tr>
                
               
                   
            </table> 
            <br>
            <button type="submit" class="btn btn-primary" > enviar </button>
            </form>
            <br>
           <a href="/consignaciones" class="btn btn-primary" >atras</a>
           
        </div>
    </div>
</div>

