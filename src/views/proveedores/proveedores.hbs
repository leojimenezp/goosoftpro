            {{>navigation}}
            <!-- Site Content Wrapper -->
            <div class="dt-content-wrapper">
                <!-- Site Content -->
                <div class="dt-content">
                    <!-- Page Header -->
                   <div class="dt-page__header">
                    <div class="row">
                        <div class="col-md-6"><h1 class="dt-page__title"><i class="icon icon-users dt-icon-bg bg-orange text-orange"></i> Proveedores</h1></div>
                        <div class="col-md-6"><a href="/proveedores/crear" class="btn btn-primary btn-sm mr-2 mb-2" style="float: right;">Añadir Proveedor</a></div>
                    </div>
                   </div>
                   <br>
                    <!-- /page header -->
                  <table id="data-table" class="table table-striped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th class="text-center">T. Documento</th>
                                                <th class="text-center">Documento</th>
                                                <th class="text-center">Regimen</th>
                                                <th class="text-center">Razón Social</th>
                                                <th class="text-center">Dirección</th>
                                                <th class="text-center">Email</th>
                                                <th class="text-center">Categoría</th>
                                                <th class="text-center">Estado</th>
                                                <th class="text-center">Editar</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                             
                                              {{#each proveedores}}
                                              <tr class="gradeX" {{#Guacamaya estado_proveedor '==' 2}} style="color: #82490b;background-color: #fee8d0;border-color: #fedfbe;" {{/Guacamaya}}>
                                              <td class="text-center">{{tipo_documento_proveedor}}</td>
                                              <td class="text-center">{{numero_documento_proveedor}}</td>
                                              <td class="text-center">{{regimen_proveedor}}</td>
                                              <td class="text-center">{{razon_social_proveedor}}</td>
                                              <td class="text-center">{{direccion_proveedor}}</td>
                                              <td class="text-center">{{email_proveedor}}</td>
                                              <td class="text-center">{{categoría_proveedor}}</td>
                                              <td class="text-center">
                                                   {{#Guacamaya estado_proveedor '==' 1}} ACTIVO {{/Guacamaya}}
                                                    {{#Guacamaya estado_proveedor '==' 2}} INACTIVO {{/Guacamaya}}
                                              </td>
                                               <td class="text-center">
                                                   <a href="/editar-proveedor/{{id_proveedor}}" class="btn btn-success text-white dt-fab-btn">
                                                   <i class="icon icon-editors icon-1x"></i>
                                                </a></td>
                                                </tr>

                                              {{/each}}
                                           
                                            </tbody>
                                          
                                        </table>
                </div>
                {{>footer}}
            </div>
