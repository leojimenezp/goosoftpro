<script src="/resources/node_modules/chart.js/dist/Chart.min.js"></script>

{{>navigation}}

<div class="dt-content-wrapper">
    <div class="dt-content datos-planeacion">
        <div class="dt-page-header">

            <div class="row">
                <div class="col-md-7">
                    <form action="/modificarPlaneacion" method="POST">
                        <div class="form-row" style="display: none;">
                            <div class="form-group col-md-12">
                                {{#each consulta}}
                                <input type="text" name="id_planeacion" class="form-control" value="{{ id_planeacion }}"
                                    readonly>
                                {{/each}}
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Titulo: </label>
                                {{#each mod_planeacion}}
                                <input name="titulo" type="text" class="form-control" value="{{ titulo }}">
                                {{/each}}
                            </div>
                            <div class="form-group col-md-6">
                                <label>Cliente: </label>
                                <select name="id_cliente" class="form-control">
                                    {{#each mod_planeacion}}
                                    {{#Guacamaya id_cliente '==' id_cliente}}
                                    <option value="{{ id_proveedor }}">{{ razon_social_proveedor }}</option>
                                    <option value="">----</option>
                                    {{/Guacamaya}}
                                    {{/each}}
                                    {{#each clientes}}
                                    <option value="{{ id_proveedor }}">{{ razon_social_proveedor }}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Contacto: </label>
                                {{#each mod_planeacion}}
                                <input name="contacto" type="text" class="form-control" value="{{ contacto }}">
                                {{/each}}
                            </div>
                            <div class="form-group col-md-6">
                                <label>Telefono: </label>
                                {{#each mod_planeacion}}
                                <input name="telefono" type="text" class="form-control" value="{{ telefono }}">
                                {{/each}}
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Email: </label>
                                {{#each mod_planeacion}}
                                <input name="email" type="email" class="form-control" value="{{ email }}">
                                {{/each}}
                            </div>
                            <div class="form-group col-md-6">
                                <label>Fecha Contacto:</label>
                                {{#each mod_planeacion}}
                                <input name="fecha_contacto" type="date" class="form-control"
                                    value="{{ fecha_contacto }}">
                                {{/each}}
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label>Hora Contacto: </label>
                                {{#each mod_planeacion}}
                                <input name="hora_contacto" type="time" class="form-control"
                                    value="{{ hora_contacto }}">
                                {{/each}}
                            </div>
                            <div class="form-group col-md-4">
                                <label>Contacto GOS:</label>
                                <select name="id_personal" class="form-control">
                                    {{#each mod_planeacion}}
                                    {{#Guacamaya id_personal '==' id_personal}}
                                    <option value="{{ id }}">{{ nombre_personal }} {{ apellido_personal }}
                                    </option>
                                    <option value="">----</option>
                                    {{/Guacamaya}}
                                    {{/each}}
                                    {{#each personal}}
                                    <option value="{{ id }}">{{ nombre_personal }} {{ apellido_personal }}
                                    </option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Centro de costo: </label>
                                <select name="id_centro_costo" class="form-control">
                                    {{#each mod_planeacion}}
                                    {{#Guacamaya id_centro_costo '==' id_centro_costo}}
                                    <option value="{{ id_centro_costo }}">{{ nombre_centro_costo }}</option>
                                    <option value="">----</option>
                                    {{/Guacamaya}}
                                    {{/each}}
                                    {{#each centro_costos}}
                                    <option value="{{ id_centro_costo }}">{{ nombre_centro_costo }}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label>Fecha Estimada: </label>
                                {{#each mod_planeacion}}
                                <input name="fecha_estimada" type="date" class="form-control"
                                    value="{{ fecha_estimada }}">
                                {{/each}}
                            </div>
                            <div class="form-group col-md-4">
                                <label>Contrato: </label>
                                <select name="id_contrato" class="form-control">
                                    {{#each mod_planeacion}}
                                    {{#Guacamaya id_contrato '==' id_contrato}}
                                    <option value="{{ id_contrato }}">{{ descripcion_contrato }}</option>
                                    <option value="">----</option>
                                    {{/Guacamaya}}
                                    {{/each}}
                                    {{#each contratos}}
                                    <option value="{{ id_contrato }}">{{ descripcion_contrato }}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Alojamiento/Alimentacion: </label>
                                <select name="alojamiento" class="form-control">
                                    {{#each mod_planeacion}}
                                    <option value="{{ alojamiento }}">{{ alojamiento_ }}</option>
                                    <option value="">----</option>
                                    {{/each}}
                                    <option value="1">GOS</option>
                                    <option value="2">Cliente</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label>Combustible: </label>
                                <select name="combustible" class="form-control">
                                    {{#each mod_planeacion}}
                                    <option value="{{ combustible }}">{{ combustible_ }}</option>
                                    <option value="">----</option>
                                    {{/each}}
                                    <option value="1">GOS</option>
                                    <option value="2">Cliente</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Iluminacion: </label>
                                <select name="iluminacion" class="form-control">
                                    {{#each mod_planeacion}}
                                    <option value="{{ iluminacion }}">{{ iluminacion_ }}</option>
                                    <option value="">----</option>
                                    {{/each}}
                                    <option value="1">GOS</option>
                                    <option value="2">Cliente</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Seguridad Fisica: </label>
                                <select name="seguridad_fisica" class="form-control">
                                    {{#each mod_planeacion}}
                                    <option value="{{ seguridad_fisica }}">{{ seguridad_fisica_ }}</option>
                                    <option value="">----</option>
                                    {{/each}}
                                    <option value="1">GOS</option>
                                    <option value="2">Cliente</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label>Personal: </label>
                                <select name="personal" class="form-control">
                                    {{#each mod_planeacion}}
                                    <option value="{{ personal }}">{{ personal_ }}</option>
                                    <option value="">----</option>
                                    {{/each}}
                                    <option value="1">GOS</option>
                                    <option value="2">Cliente</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Campo: </label>
                                <select name="id_campo" class="form-control">
                                    {{#each mod_planeacion}}
                                    {{#Guacamaya id_campo '==' id_campo}}
                                    <option value="{{ id_campo }}">{{ nombre_campo }}</option>
                                    <option value="">----</option>
                                    {{/Guacamaya}}
                                    {{/each}}
                                    {{#each campos}}
                                    <option value="{{ id_campo }}">{{ nombre_campo }}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Supervisor: </label>
                                <select name="id_personal_supervisor" class="form-control">
                                    {{#each personal_supervisor_planeacion}}
                                    {{#Guacamaya id '==' id}}
                                    <option value="{{ id }}">{{ nombre_personal }} {{ apellido_personal }}
                                    </option>
                                    <option value="">----</option>
                                    {{/Guacamaya}}
                                    {{/each}}
                                    {{#each personal}}
                                    <option value="{{ id }}">{{ nombre_personal }} {{ apellido_personal }}
                                    </option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label>Moneda: </label>
                                <select name="id_moneda" class="form-control">
                                    {{#each mod_planeacion}}
                                    {{#Guacamaya id_moneda '==' id_moneda}}
                                    <option value="{{ id_moneda }}">{{ abreviatura_moneda }}</option>
                                    <option value="">----</option>
                                    {{/Guacamaya}}
                                    {{/each}}
                                    {{#each monedas}}
                                    <option value="{{ id_moneda }}">{{ abreviatura_moneda }}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>TRM: </label>
                                {{#each mod_planeacion}}
                                <input type="number" name="trm" class="form-control" value="{{ trm }}">
                                {{/each}}
                            </div>
                            <div class="form-group col-md-4">
                                <label>Estado: </label>
                                <select name="estado" class="form-control">
                                    <option value="Ejecucion">Ejecucion</option>
                                    <option value="Creacion">Creacion</option>
                                    <option value="Cotizacion">Cotizacion</option>
                                    <option value="Cerrado">Cerrado</option>
                                    <option value="Rechazado">Rechazado</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label>Objetivo Trabajo: </label>
                                {{#each mod_planeacion}}
                                <textarea name="objetivo_trabajo" class="form-control">{{ objetivo_trabajo }}</textarea>
                                {{/each}}
                            </div>
                            <div class="form-group col-md-12">
                                <label>Requisitos HSE: </label>
                                {{#each mod_planeacion}}
                                <textarea name="requisitos_hse" class="form-control">{{ requisitos_hse }}</textarea>
                                {{/each}}
                            </div>
                            <div class="form-group col-md-12">
                                <label>Observacion Servicio: </label>
                                {{#each mod_planeacion}}
                                <textarea name="observacion" class="form-control">{{ observacion }}</textarea>
                                {{/each}}
                            </div>
                        </div>
                        <input type="submit" value="Guardar" class="btn-guardar-planeacion btn btn-primary">
                        
                          {{#each consulta}}<div>
                              <br>
                          </div>
                        <a href="/planeacion/graficas/{{ id_planeacion }}" class="btn-guardar-planeacion btn btn-primary" >Cancelar</a>
                    </form>
                     {{/each}}
                </div>
                <div class="col-md-5">
                    <h1>Tipos de trabajo: </h1>
                    <br>
                    <form action="/agregarTipoTrabajo" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-6" style="display: none;">
                                {{#each consulta}}
                                <input type="text" name="id_planeacion" value="{{ id_planeacion }}">
                                {{/each}}
                            </div>
                            <div class="form-group col-md-6">
                                <select name="id_tipo_trabajo" class="form-control">
                                    <option value="">Seleccione ...</option>
                                    {{#each tipos_trabajo}}
                                    <option value="{{ id_tipo_trabajo }}">{{ descripcion_tipo_trabajo }}
                                    </option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <input type="submit" value="Agregar" class="btn btn-primary">
                            </div>
                        </div>
                    </form>
                    <table class="table-planeacion table table-striped table-bordered table-hover display">
                        <thead>
                            <tr>
                                <th class="text-center">Tipo de trabajo</th>
                                <th class="text-center">Accion</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each tipos_trabajo_planeacion}}
                            <tr>
                                <td class="text-center">{{ descripcion_tipo_trabajo }}</td>
                                <td class="text-center">
                                    <a href="/eliminarTipoTrabajo/{{ id_tipo_trabajo_planeacion }}/{{ id_planeacion }}"
                                        class="btn-eliminar-planeacion btn btn-success text-white dt-fab-btn">
                                        <img src="/icons-planeacion/trash.svg" alt="">
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <form action="/agregarPozo" method="POST">
                        <h1>Pozos: </h1>
                        <br>
                        <div class="form-row">
                            <div class="form-group col-md-6" style="display: none;">
                                {{#each consulta}}
                                <input type="text" name="id_planeacion" value="{{ id_planeacion }}">
                                {{/each}}
                            </div>
                            <div class="form-group col-md-6">
                                <select name="id_pozo" class="form-control">
                                    <option value="">Seleccione ...</option>
                                    {{#each pozos}}
                                    <option value="{{ id_pozo }}">{{ nombre_pozo }}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <input type="submit" value="Agregar" class="btn btn-primary">
                            </div>
                        </div>
                    </form>
                    <table class="table-planeacion table table-striped table-bordered table-hover display">
                        <thead>
                            <tr>
                                <th class="text-center">Pozo</th>
                                <th class="text-center">Accion</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each pozos_planeacion}}
                            <tr>
                                <td class="text-center">{{ nombre_pozo }}</td>
                                <td class="text-center">
                                    <a href="/eliminarPozo/{{ id_pozo_planeacion }}/{{ id_planeacion }}"
                                        class="btn-eliminar-planeacion btn btn-success text-white dt-fab-btn">
                                        <img src="/icons-planeacion/trash.svg" alt="">
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
</div>