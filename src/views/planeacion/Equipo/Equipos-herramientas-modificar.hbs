<script src="/resources/node_modules/chart.js/dist/Chart.min.js"></script>

{{>navigation}}

<div class="dt-content-wrapper">
    <div class="dt-content datos-planeacion">
        <div class="dt-page-header">

            <form action="/actualizarEquipo_Equipo" method="POST">
                <div class="form-row" style="display: none;">
                    <div class="form-group col-md-6">
                        {{#each consulta}}
                        <input type="text" name="id_planeacion" value="{{ id_planeacion }}" class="form-control"
                            readonly>
                        {{/each}}
                    </div>
                    <div class="form-group col-md-6">
                        {{#each consulta}}
                        <input type="text" name="id_equipo_item_equipo_herramienta"
                            value="{{ id_equipo_item_equipo_herramienta }}" class="form-control" readonly>
                        {{/each}}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Fecha inicio movilizacion: </label>
                        {{#each f_mov}}
                        <input type="text" value="{{ fecha_inicio_gasto }}" class="form-control" readonly>
                        {{/each}}
                    </div>
                    <div class="form-group col-md-6">
                        <label>Fecha final movilizacion: </label>
                        {{#each f_mov}}
                        <input type="text" value="{{ fecha_final_gasto }}" class="form-control" readonly>
                        {{/each}}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label>Fecha inicio gasto standby: </label>
                        <input type="date" name="f_i_gs" class="form-control">
                    </div>
                    <div class="form-group col-md-4">
                        <label>Fecha final gasto standby: </label>
                        <input type="date" name="f_f_gs" class="form-control">
                    </div>
                    <div class="form-group col-md-4">
                        <label>Gasto standby: </label>
                        <input type="number" name="c_u_gs" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Vehiculo: </label>
                        {{#each vehiculo_carga}}
                        <input type="text" value="{{ nombre_equipo }} - {{ placa_equipo }}" class="form-control"
                            readonly>
                        {{/each}}
                    </div>
                    <div class="form-group col-md-6">
                        <label>Carga: </label>
                        {{#each vehiculo_carga}}
                        <input type="text" value="{{ nombre_equipo }}" class="form-control" readonly>
                        {{/each}}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Unidad de medida: </label>
                        {{#each unidad_medida}}
                        <input type="text" value="{{ abreviatura_unidad_medida }}" class="form-control" readonly>
                        {{/each}}
                    </div>
                    <div class="form-group col-md-6">
                        <label>Rubro: </label>
                        {{#each rubro}}
                        <input type="text" value="{{ sigla_rubro }}" class="form-control" readonly>
                        {{/each}}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Moneda: </label>
                        {{#each moneda}}
                        <input type="text" value="{{ abreviatura_moneda }}" class="form-control" readonly>
                        {{/each}}
                    </div>
                    <div class="form-group col-md-6">
                        <label>Medio de pago: </label>
                        {{#each medio_pago}}
                        {{#Guacamaya medio_pago '==' 1}}
                        <input type="text" value="Credito" class="form-control" readonly>
                        {{/Guacamaya}}
                        {{#Guacamaya medio_pago '==' 2}}
                        <input type="text" value="Contado" class="form-control" readonly>
                        {{/Guacamaya}}
                        {{/each}}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Costo unitario rubro: </label>
                        {{#each c_u_rubro}}
                        <input type="text" value="{{ costo_unitario }}" class="form-control" readonly>
                        {{/each}}
                    </div>
                    <div class="form-group col-md-6">
                        <label>Gasto: </label>
                        {{#each gasto}}
                        <input type="text" value="{{ gasto_unitario }}" class="form-control" readonly>
                        {{/each}}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label>Observaciones: </label>
                        {{#each observaciones}}
                        <textarea class="form-control" readonly>{{ observaciones }}</textarea>
                        {{/each}}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <input type="submit" value="Guardar" class="btn btn-primary" style="width: 100%;">
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>